
@model IEnumerable<BL.ViewModels.CourseVM>
@using BL.AppServices

@{
    CourseAppServices courseAppService = new CourseAppServices();
    CategoryAppServices categoryAppService = new CategoryAppServices();
}
@foreach (var cor in courseAppService.GetAllCourse().Take(6).ToList())
{

    <div class="col-md-4 ftco-animate">
        <div class="project-wrap">
            <a href=@Url.Action("GetCourse", "Course", new { id = cor.ID }) class="img" style="background-image: url(~/Content/images/work-1.jpg);">
            </a>
            <div class="text p-4">
                <h3><a  href=@Url.Action("GetCourse", "Course", new { id = cor.ID })>@cor.title</a></h3>
                <p class="advisor">@cor.description</p>
                <ul class="d-flex justify-content-between">
                    <li><span class="flaticon-shower"></span>@cor.hours</li>
                    <li class="price"><a href=@Url.Content("/Course/Enroll/"+cor.ID)>Enroll</a></li>
                </ul>
            </div>
        </div>
    </div>
}

